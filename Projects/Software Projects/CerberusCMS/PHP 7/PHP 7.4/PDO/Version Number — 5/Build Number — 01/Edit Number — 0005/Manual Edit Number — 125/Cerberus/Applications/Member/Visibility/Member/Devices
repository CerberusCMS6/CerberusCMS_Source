<FORM ACTION=\"?$_INTERNAL_APPLICATION_MODULE_MEMBER&#61;Devices&amp;DeviceTest&#61;GPS\" METHOD=\"POST\">
      <INPUT TYPE=\"hidden\" NAME=\"latitude\" ID=\"latitude\">
      <INPUT TYPE=\"hidden\" NAME=\"longitude\" ID=\"longitude\">
      <INPUT TYPE=\"submit\" NAME=\"submit\" VALUE=\"Display Current G.P.S. Coordinates\">
</FORM>
 
<SCRIPT TYPE=\"text/javascript\">
	function getLocation() {
		navigator.geolocation.getCurrentPosition(showPosition);
}
 
function showPosition(position) {
	document.querySelector('#latitude').value = position.coords.latitude;
	document.querySelector('#longitude').value = position.coords.longitude;
}
 
getLocation();
</SCRIPT>
");

/*
 ============================================================================================================
 + IF: Internal Application: Device Test :: Global-Positioning-System Coordinates :: Chip :: Input Form :: Variables HAVE Executed, Display: G.P.S. Chip Location
